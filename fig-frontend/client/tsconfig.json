{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["ESNext", "dom"],
        "skipLibCheck": true,
        "useDefineForClassFields": false,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    }
}
